{
    "manifest_version": 2,
    "name": "Many-Slides",
    "version": "0.0.9.1",
    "minimum_chrome_version": "31",
    "offline_enabled": true,
    "icons": {
    "16": "images/icon_16.png",
    "128": "images/icon_128.png"
    },
    "app": {
        "background": {
            "scripts": ["runtime.js"]
        }
    },
    "permissions": [
        {"fileSystem": ["write", "retainEntries", "directory"]},
        "clipboardWrite",
        "storage"
    ],
    "file_handlers": {
        "text": {
            "types": [
                "text/*"
            ]
        }
    }
}
